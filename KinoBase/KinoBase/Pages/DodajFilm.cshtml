@page
@model KinoBase.Pages.DodajFilmModel
@{
}
<br />
<h2 class="text-info">Dodaj Nowy Film</h2>
<br />
<div class="border container" style=" padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Film.Tytul"></label>
            </div>
            <div class="col-6">
                <input asp-for="Film.Tytul" class="form-control" />
            </div>
            <span asp-validation-for="Film.Tytul" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Film.Rok"></label>
            </div>
            <div class="col-6">
                <input asp-for="Film.Rok" class="form-control" />
            </div>
            <span asp-validation-for="Film.Rok" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Film.Gatunek"></label>
            </div>
            <div class="col-6">
                <input asp-for="Film.Gatunek" class="form-control" />
            </div>
            <span asp-validation-for="Film.Gatunek" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Film.Rezyser"></label>
            </div>
            <div class="col-6">
                <input asp-for="Film.Rezyser" class="form-control" />
            </div>
            <span asp-validation-for="Film.Rezyser" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Film.Kraj"></label>
            </div>
            <div class="col-6">
                <input asp-for="Film.Kraj" class="form-control" />
            </div>
            <span asp-validation-for="Film.Kraj" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Dodaj Film" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Filmy" class="btn btn-success form-control">Wróć Do Listy</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
 }