@page
@model KinoBase.Pages.UsunModel

@{
    ViewData["Title"] = "Usun";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Usuń</h1>

<h3>Jesteś pewny, że chcesz usunąć?</h3>
<div>
    <h4>Film</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Film.Tytul)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.Tytul)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Film.Rok)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.Rok)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Film.Gatunek)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.Gatunek)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Film.Rezyser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.Rezyser)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Film.Kraj)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.Kraj)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Film.ID" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-page="./Filmy">Wróć Do listy</a>
    </form>
</div>
