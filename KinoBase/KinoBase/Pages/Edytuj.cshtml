@page
@model KinoBase.Pages.EdytujModel

@{
    ViewData["Title"] = "Edytuj";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edytuj</h1>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Film.ID" />
            <div class="form-group">
                <label asp-for="Film.Tytul" class="control-label"></label>
                <input asp-for="Film.Tytul" class="form-control" />
                <span asp-validation-for="Film.Tytul" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Rok" class="control-label"></label>
                <input asp-for="Film.Rok" class="form-control" />
                <span asp-validation-for="Film.Rok" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Gatunek" class="control-label"></label>
                <input asp-for="Film.Gatunek" class="form-control" />
                <span asp-validation-for="Film.Gatunek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Rezyser" class="control-label"></label>
                <input asp-for="Film.Rezyser" class="form-control" />
                <span asp-validation-for="Film.Rezyser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Kraj" class="control-label"></label>
                <input asp-for="Film.Kraj" class="form-control" />
                <span asp-validation-for="Film.Kraj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Filmy">Wróć do Listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
