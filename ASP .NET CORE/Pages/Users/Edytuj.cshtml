@page
@model WebApplication1.Pages.Users.EdytujModel
@{
    ViewData["Title"] = "Edytuj użytkownika";
}

<div class="border container padding-20">
    <form method="post">
        <input type="hidden" asp-for="IdentityUserList.Id" />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="IdentityUserList.UserName"></label>
            </div>
            <div class="col-6">
                <input asp-for="IdentityUserList.UserName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="IdentityUserList.Email"></label>
            </div>
            <div class="col-6">
                <input asp-for="IdentityUserList.Email" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Edytuj" class="btn btn-info form-control" />
            </div>
            <div class="col-3">
                <a class="btn btn-success form-control text-white pointer" asp-page="/Users/Uzytkownicy">Powrót do listy użytkowników</a>
            </div>
        </div>
    </form>
</div>