@page
@using WebApplication1.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Darmowa rejestracja";
}

<div class="logowanie">
    <h1>@ViewData["Title"]</h1>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h4>Stwórz nowe konto.</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        <div class="txt_field">
            <input type="text" asp-for="Input.Username" required />
            <span></span>
            <label>Nazwa użytkownika</label><br />
        </div>

            <span asp-validation-for="Input.Email" class="text-danger"></span>
        <div class="txt_field">
            <input type="text" asp-for="Input.Email" required />
            <span></span>
            <label>Email</label>
        </div>

            <span asp-validation-for="Input.Password" class="text-danger"></span>
        <div class="txt_field">
            <input type="password" asp-for="Input.Password" required />
            <span></span>
            <label>Hasło</label>
        </div>

            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        <div class="txt_field">
            <input type="password" asp-for="Input.ConfirmPassword" required />
            <span></span>
            <label>Potwierdź hasło</label>
        </div>

        @if (User.IsInRole(SD.AdminEndUser))
        {
            <div class="">    
                <label>
                    <input asp-for="Input.IsAdmin" class="" /> Utworzyć konto administratora?
                </label>
            </div>
        }

        <button type="submit" class="">Zarejestruj</button>
    </form>
</div>

