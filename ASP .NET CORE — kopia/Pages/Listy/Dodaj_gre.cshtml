@page
@model WebApplication1.Pages.Listy.Dodaj_greModel
@{
    ViewData["Title"] = "Dodaj grę";
}

<div class="border container padding-20">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Gra.Tytul"></label>
            </div>
            <div class="col-6">
                <input asp-for="Gra.Tytul" class="form-control" />
            </div>
            <span asp-validation-for="Gra.Tytul" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Gra.Firma"></label>
            </div>
            <div class="col-6">
                <input asp-for="Gra.Firma" class="form-control" />
            </div>
            <span asp-validation-for="Gra.Firma" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Gra.Gatunek"></label>
            </div>
            <div class="col-6">
                <input asp-for="Gra.Gatunek" class="form-control" />
            </div>
            <span asp-validation-for="Gra.Gatunek" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Gra.Ocena"></label>
            </div>
            <div class="col-6">
                <input asp-for="Gra.Ocena" class="form-control" />
            </div>
            <span asp-validation-for="Gra.Ocena" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Dodaj" class="btn btn-info form-control" />
            </div>
            <div class="col-3">
                <a class="btn btn-success form-control text-white pointer" asp-area="" asp-page="/Listy/Wszystkie_gry">Powrót do listy gier</a>
            </div>
        </div>
    </form>
</div>